{
  "name": "@barnabas-lesti/clean-project",
  "description": "JavaScript project cleaner package.",
  "type": "module",
  "packageManager": "npm@10.7.0",
  "engines": {
    "node": ">=18.20.0",
    "npm": ">=10.7.0"
  },
  "bin": {
    "clean-project": "./dist/index.cjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "prettier . --check --cache && eslint . --cache",
    "lint:fix": "prettier . --write --cache && eslint . --fix --cache",
    "test:e2e": "jest",
    "test:e2e:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.2",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "tsup": "^7.2.0",
    "typescript": "^5.5.4"
  }
}
